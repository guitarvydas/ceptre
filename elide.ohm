VerbatimElider {

top = oneCharOrMacro+

oneCharOrMacro =
  | comment -- comment
  | space+ -- space
  | verbatim -- verbatim
  | any -- other

verbatim = "«" verbatimInnard* "»"
verbatimInnard =
  | "«" verbatimInnard* "»" -- rec
  | ~"«" ~"»" any -- bottom

comment = "%" (~nl any)* nl
space += comment
nl = "\n"+
}

